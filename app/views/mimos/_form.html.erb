<div class="col-lg-6 col-lg-offset-3">
  <%= form_for @mimo, html: { multipart: true, class: "" } do |f| %>
    <% if @mimo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@mimo.errors.count, "error") %> prohibited this mimo from being saved:</h2>

        <ul>
        <% @mimo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :mimo_case %>
      <%= f.select  :mimo_case,
                    [["Adopción", "adoption"]],
                    { include_blank: false},
                    { class: 'chosen-select' }
      %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :race %>
      <%= f.select  :race,
                    DOG_BREEDS,
                    { include_blank: true },
                    { class: 'chosen-select' }
      %>
    </div>
    <div class="form-group">
      <%= f.label :size %>
      <%= f.select  :size,
                    [["Pequeño", "small"], ["Mediano", "medium"], ["Grande", "big"]],
                    { include_blank: false},
                    { class: 'chosen-select' }
      %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :country %>
      <%= f.text_field :country, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :street %>
      <%= f.text_field :street, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :coordinates %>
      <%= f.text_field :coordinates, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :color1 %>
      <%= f.text_field :color1, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :color2 %>
      <%= f.text_field :color2, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <%= f.text_field :gender, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :age %>
      <%= f.select  :age,
                    [["Cachorro", "puppy"], ["1-3", "1-3"], ["4-6", "4-6"],["Mas de 6", "6+"]],
                    { include_blank: false},
                    { class: 'chosen-select' }
      %>
    </div>
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>