<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>

    <h1>Mimos<%= " en #{params[:address]}" if params[:address] %></h1>
    <div class="row">
      <% @mimos.each do |m| %>
        <%= render partial: 'mimo_partial', locals: {mimo: m} %>
      <% end %>
    </div>
    <div class="row">
      <div class="text-center">
        <%= paginate @mimos, theme: 'twitter-bootstrap-3' %>
      </div>
    </div>
  </div>
</div>

