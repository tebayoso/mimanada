<div class=" col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="portfolio-item">
    <%= link_to mimo do %>
      <%= image_tag mimo.photo.url(:medium), class: "img-responsive", alt: mimo.title %>
    <% end %>
    <div class="bottom-align">
      <h5><strong><%= link_to mimo.title, mimo %></strong></h5>
      <p><%= truncate(mimo.description, length: 100) %></p>
      <div class="info-button">
        <%= link_to mimo, class: "btn btn-primary bottom" do %>
          Mas informaci√≥n <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </div>
      <div class="social-buttons">
        <a class="btn btn-social-icon btn-twitter" target="_blank" href=<%= twitter_share_url(mimo) %> >
          <i class="fa fa-twitter"></i>
        </a>
        <a class="btn btn-social-icon btn-facebook" target="_blank" href=<%= facebook_share_url(mimo) %> >
          <i class="fa fa-facebook"></i>
        </a>
        <a class="btn btn-social-icon btn-google-plus" target="_blank" href=<%= google_plus_share_url(mimo) %> >
          <i class="fa fa-google-plus"></i>
        </a>
      </div>
    </div>
  </div>
</div>
